<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RedSocial.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            VerticalOptions="Center"
            Spacing="25">
            <Image Source="https://img.freepik.com/free-psd/instagram-application-logo_23-2151544100.jpg?semt=ais_hybrid"
                   HeightRequest="150"
                   Margin="0,0,0,40"></Image>
            <Entry x:Name="txtNickname" Placeholder="Nickname"></Entry>
            <Entry x:Name="txtPassword" Placeholder="Contraseña"></Entry>
            <Button x:Name="btnLogin" Text="Login"></Button>
            <Button x:Name="btnRegistro" Text="Registro" Clicked="BtnRegistro_OnClicked"></Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
